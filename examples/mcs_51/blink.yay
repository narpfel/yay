from yay import Program, sub, macro
from yay.cpus.MCS_51 import Delay


class Main(Program, cpu="MCS_51"):
    F_CPU = 22118400

    mods = [Delay]

    def main(self):
        self.delay = Delay()

        SP <- 0x30
        with self.infinitely():
            std(P1)
            cpl()
            for _ in range(4):
                self.delay.ms(250)
