from yay import Program, macro
from yay.cpus.MCS_51.uart import BlockingUart


class Main(Program, cpu="MCS_51"):
    mods = [BlockingUart]

    def main(self):
        self.uart = BlockingUart()

        SP <- 0x30

        self.uart.setup()

        with self.infinitely():
            self.uart.read_byte()
            std(P1)
            self.uart.write_byte()
